<div class="row">
  <!-- Sidebar -->
  <div class="sidebar col-xs-3">
    <h3>Playlist Forge</h3>
    <div>
      <form action="/create-playlist" method="POST" >
        <h5>Playlists
          <input class="btn btn-success btn-sm" type="submit" value="+">
        </h5>
      </form>
    </div>
    <div class="list-group list-group-sidebar">
      <% @user.playlists.each do |playlist| %>
      <a href="/playlist/<%= playlist.id %>" class="list-group-item">
        <%= playlist.name %>
      </a>
      <% end %>
    </div>
  </div>

  <!-- Content -->
  <div class="col-xs-9">
    <div class="content">
      <h3 class=title>Featured Platlists</h3>
      <hr>
       <div class="row">
        <div class="col-xs-3">
          <img src="http://www.bunchofgrapes-knightsbridge.co.uk/sites/default/files/events/images/the-strokes-the-strokes-23203114-500-477.png" class="img-responsive">
        </div>
      </div>
    </div>
    </div>