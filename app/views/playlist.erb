<div class="row">
	<!-- Sidebar -->
  <div class="sidebar col-xs-3">
    <h3>Playlist Forge</h3>
    <h5>Add songs</h5>
    <form id="instant-search" class="row" action="/search-track" method="POST">
      <input class="playlist-id hidden" name="playlist_id" type="text" value="<%= @playlist.id %>">
      <div class="form-group col-xs-12">
        <input class="dark form-control" name="search" type="text" placeholder="Search Spotify..." autocomplete="off">
      </div>
      <button class="hidden" type="submit"></button>
    </form>
    <div id="search-results" class="list-group list-group-sidebar">
      <a href="#" class="list-group-item">Suggestion 1<span class="pull-right">+</span></a>
      <a href="#" class="list-group-item">Suggestion 2<span class="pull-right">+</span></a>
    </div>
  </div>

  <!-- Content -->
  <div class="col-xs-9">
    <div class="content playlist">

      <div class="row">
				<div class="col-xs-3">
					<img class="img-responsive" src="<%=
            song = @playlist.songs[0]
            if song
              RSpotify::Track.find(song.spotify_id).album.images[0]["url"]
            end
          %>">
				</div>
				<div class="col-xs-9">
					<h3 class="title"><%= @playlist.name %></h3>
          <p><%= @playlist.songs.length %> songs</p>
          <button class="btn btn-success">Sync with Spotify</button>
				</div>
			</div>
			<hr>
			<table class="table table-hover nobk">
				<thead>
					<tr>
						<td>Title</td>
            <td>Album</td>
            <td>Artist</td>
					</tr>
				</thead>
        <tbody>
          <% @playlist.songs.each do |song| %>
            <tr>
              <td><%= song.name %></td>
              <td><%= song.album %></td>
              <td><%= song.artist %></td>
            </tr>
          <% end %>
        </tbody>
			</table>

    </div>
  </div>
</div>