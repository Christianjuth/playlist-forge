<div class="row">
	<!-- Sidebar -->
  <div class="sidebar col-xs-3">
    <h4>Playlist Forge</h4>
    <form class="row" action="/add-to-playlist" method="POST">
      <input class="hidden" name="playlist_id" type="text" value="<%= @playlist.id %>">
      <div class="form-group col-xs-12">
        <input class="dark form-control" name="search" type="text" placeholder="Search">
      </div>
      <button class="hidden" type="submit"></button>
    </form>
    <div class="list-group list-group-sidebar">
      <a href="#" class="list-group-item">Suggestion 1<span class="pull-right">+</span></a>
      <a href="#" class="list-group-item">Suggestion 2<span class="pull-right">+</span></a>
    </div>
  </div>

  <!-- Content -->
  <div class="col-xs-9">
    <div class="content playlist">

      <div class="row">
				<div class="col-xs-2">
					<img class="img-responsive" src="<%=
            song = @playlist.songs[0]
            if song
              RSpotify::Track.find(song.spotify_id).album.images[0]["url"]
            end
          %>">
				</div>
				<div class="col-xs-10">
					<h4 class="title">Title<%= @playlist.name %></h4>
          <p><%= @playlist.songs.length %> songs</p>
				</div>
			</div>
			<hr>
			<table class="table table-hover nobk">
				<thead>
					<tr>
            <td></td>
						<td>Title</td>
            <td>Album</td>
            <td>Artist</td>
					</tr>
				</thead>
        <tbody>
          <% @playlist.songs.each do |song| %>
            <tr>
              <td><i class="fa fa-play-circle-o fa-1x"></td>
              <td><%= song.name %></td>
              <td><%= song.album %></td>
              <td><%= song.artist %></td>
            </tr>
          <% end %>
        </tbody>
			</table>

    </div>
  </div>
</div>