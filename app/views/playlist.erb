<div class="row">
	<!-- Sidebar -->
  <div class="sidebar col-xs-3">
    <div class="row">
      <div class="col-xs-1">
        <h4>
          <a href="/all-playlists">
            <i class="fa fa-arrow-circle-o-left"></i>
          </a>
        </h4>
      </div>
      <div class="col-xs-10">
        <h4><%= @playlist.name %></h4>
        <form action="/add-to-playlist" method="POST">
          <input class="hidden" name="playlist_id" type="text" value="<%= @playlist.id %>">
          <input name="search" type="text">
          <button type="submit">Add</button>
        </form>
<!--         <div class="list-group list-group-sidebar">
          <a href="#" class="list-group-item">Song 1</a>
          <a href="#" class="list-group-item">Song 2</a>
        </div> -->
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="col-xs-9">
    <div class="content">

      <div class="row">
				<div class="col-xs-2">
					<img class="img-responsive" src="http://netstorage.metrolyrics.com/albums/1700238jpg.jpg">
				</div>
				<div class="col-xs-10">
					<h2>Playlist</h2>
				</div>
			</div>
			<hr>
			<table class="table table-hover nobk">
				<thead>
					<tr>
            <td></td>
						<td>Title</td>
            <td>Album</td>
            <td>Artist</td>
					</tr>
				</thead>
        <tbody>
          <% @playlist.songs.each do |song| %>
            <tr>
              <td><i class="fa fa-play-circle-o fa-1x"></td>
              <td><%= song.name %></td>
              <td><%= song.album %></td>
              <td><%= song.artist %></td>
            </tr>
          <% end %>
        </tbody>
			</table>

    </div>
  </div>
</div>